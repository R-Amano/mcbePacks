{
  "namespace": "hud",
  "RA_co": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      {
       "ra_cori": {
          "type": "label",
          "anchor_to": "bottom_left",
          "anchor_from": "bottom_left",
          "text": "$RA_copyright_text",
          "color": [1.0, 1.0, 1.0],
          "offset": [ 1, -1 ],
          "layer": 1
        }
      },
      {
        "ra_imag":{
          "type": "image",
          "anchor_to": "bottom_right",
          "anchor_from": "bottom_right",
          "texture":"ui/raco",
          "alpha": "$RA_icon_alpha",
          "size": "$RA_icon_size",
          "offset": [ -1, -1 ],
          "layer": 1
        }
      }
    ],
    "bindings": [
      {
        "binding_name": "(not #hud_visible)",
        "binding_name_override": "#visible",
        "binding_type": "global"
      }
    ]
  },

  "hud_content": {
    "type": "panel",
    "$hud_size": [ "100%", "100%" ],
    "$hud_player_rend_desktop_offset|default": [ 15, 15 ],
    "variables": [
      {
        "requires": "($is_holographic and not $is_living_room_mode)",
        "$hud_player_rend_desktop_offset": [ 100, 50 ]
      },
      {
        "requires": "($compress_hud_width)",
        "$hud_size": [ "90%", "100%" ]
      }
    ],
    "size": "$hud_size",
    "controls": [
      { "root_panel@hud.root_panel": {}},
      {
        "editor_gizmo_renderer@editor_gizmo_renderer": {
          "ignored": "(not $is_editor_mode_enabled)"
        }
      },
      { "RA_co@hud.RA_co": {}},
      { "camera_renderer@camera_renderer": {}}
    ]
  }
}