{
  "namespace": "chat",

  "ra_tabs_panel":{
    "type":"panel",
    "anchor_from":"bottom_right",
    "anchor_to":"bottom_right",
    "size":["100%cm","100%cm"],
    "offset":[0,-32],
    "controls":[
      {
        "tab1@common_buttons.light_text_button":{
          "offset":[-52,0],
          "size":[50,25],
          "$button_text":"TAB:次へ",
          "button_mappings":[
            {
              "from_button_id":"button.menu_select",
              "to_button_id":"button.chat_autocomplete",
              "mapping_type":"pressed"
            }
          ]
        }
      },
      {
        "tab2@common_buttons.light_text_button":{
          "offset":[-52,-25],
          "size":[50,25],
          "$button_text":"TAB:戻る",
          "button_mappings":[
            {
              "from_button_id":"button.menu_select",
              "to_button_id":"button.chat_autocomplete_back",
              "mapping_type":"pressed"
            }
          ]
        }
      },
      {
        "tab3@common_buttons.light_text_button":{
          "offset":[0,0],
          "size":[50,25],
          "$button_text":"履歴:次へ",
          "button_mappings":[
            {
              "from_button_id":"button.menu_select",
              "to_button_id":"button.chat_next_message",
              "mapping_type":"pressed"
            }
          ]
        }
      },
      {
        "tab4@common_buttons.light_text_button":{
          "offset":[0,-25],
          "size":[50,25],
          "$button_text":"履歴:前へ",
          "button_mappings":[
            {
              "from_button_id":"button.menu_select",
              "to_button_id":"button.chat_previous_message",
              "mapping_type":"pressed"
            }
          ]
        }
      }
    ]
  },

  "chat_screen_content": {
    "modifications":[
      {
        "array_name":"controls",
        "operation":"insert_front",
        "value":[
          {
            "ra_tabs_panel@ra_tabs_panel":{}
          }
        ]
      }
    ]
  }
}